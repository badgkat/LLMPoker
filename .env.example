# LLM Poker Environment Configuration
# Copy this file to .env and fill in your values

# LLM Provider Configuration
# Options: 'openai', 'anthropic', 'local', 'mock'
VITE_LLM_PROVIDER=mock

# API Keys (only needed for cloud providers)
# OpenAI API Key (get from https://platform.openai.com/api-keys)
VITE_OPENAI_API_KEY=

# Anthropic API Key (get from https://console.anthropic.com/)
VITE_ANTHROPIC_API_KEY=

# For convenience, you can set a single LLM_API_KEY that will be used for the selected provider
VITE_LLM_API_KEY=

# Local LLM Configuration (for Ollama or similar)
# Default Ollama endpoint
VITE_LOCAL_LLM_URL=http://localhost:11434/v1
VITE_LOCAL_LLM_MODEL=llama3.1:8b

# Game Configuration
VITE_DEFAULT_SMALL_BLIND=100
VITE_DEFAULT_BIG_BLIND=200
VITE_DEFAULT_STARTING_CHIPS=10000

# Development Settings
VITE_DEBUG_MODE=false
VITE_ENABLE_AI_LOGGING=true
VITE_MOCK_AI_DELAY=500

# Performance Settings
VITE_MAX_GAME_LOG_ENTRIES=1000
VITE_AI_DECISION_TIMEOUT=10000